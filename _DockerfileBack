FROM node:14.15.2
WORKDIR /app
COPY package.json /app/
COPY package-lock.json /app/
RUN yarn install


COPY public/ /app/
COPY src/ /app/


WORKDIR /app/client
RUN npm install --silent
RUN npm install -g nodemon
# RUN npm install react-script@3.4.1 -g --silent


WORKDIR /app/server
RUN npm install --silent
EXPOSE 3000

WORKDIR /app
CMD ["yarn","dev"]